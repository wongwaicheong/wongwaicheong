    <div class="grid-container">
        <div id="grid1" class="grid-item" onclick="makeMove(0, 0)"></div>
        <div id="grid2" class="grid-item" onclick="makeMove(0, 1)"></div>
        <div id="grid3" class="grid-item" onclick="makeMove(0, 2)"></div>
        <div id="grid4" class="grid-item" onclick="makeMove(1, 0)"></div>
        <div id="grid5" class="grid-item" onclick="makeMove(1, 1)"></div>
        <div id="grid6" class="grid-item" onclick="makeMove(1, 2)"></div>
        <div id="grid7" class="grid-item" onclick="makeMove(2, 0)"></div>
        <div id="grid8" class="grid-item" onclick="makeMove(2, 1)"></div>
        <div id="grid9" class="grid-item" onclick="makeMove(2, 2)"></div>
    </div>
