<footer>
    <b>井字遊戲 (2024.01.26)</b>
</footer>

<script>
    var currentPlayer = 'X';
    var gameBoard = [
        ['', '', ''],
        ['', '', ''],
        ['', '', '']];

    function makeMove(row, col) {if (gameBoard[row][col] === '') {
            gameBoard[row][col] = currentPlayer;
            document.getElementById('grid' + (row * 3 + col + 1)).innerText = currentPlayer;
       
                   if (checkGameOver()) {resetGame(); return;}

            currentPlayer = currentPlayer === 'X' ? 'O' : 'X'; }}

    function checkGameOver() {
    for (var row = 0; row < 3; row++) {
        if (gameBoard[row][0] !== '' &&
            gameBoard[row][0] === gameBoard[row][1] &&
            gameBoard[row][0] === gameBoard[row][2]) {
            setTimeout(() => alert('遊戲結束！' + gameBoard[row][0] + '獲勝！'), 10);
            showFeedback('遊戲結束！' + gameBoard[row][0] + '獲勝！');
            return true;
        }
    }

    for (var col = 0; col < 3; col++) {
        if (gameBoard[0][col] !== '' &&
            gameBoard[0][col] === gameBoard[1][col] &&
            gameBoard[0][col] === gameBoard[2][col]) {
            alert('遊戲結束！' + gameBoard[0][col] + '獲勝！');
            showFeedback('遊戲結束！' + gameBoard[0][col] + '獲勝！');
            return true;
        }
    }

    if (gameBoard[0][0] !== '' &&
        gameBoard[0][0] === gameBoard[1][1] &&
        gameBoard[0][0] === gameBoard[2][2]) {
        alert('遊戲結束！' + gameBoard[0][0] + '獲勝！');
        showFeedback('遊戲結束！' + gameBoard[0][0] + '獲勝！');
        return true;
    }

    if (gameBoard[2][0] !== '' &&
        gameBoard[2][0] === gameBoard[1][1] &&
        gameBoard[2][0] === gameBoard[0][2]) {
        alert('遊戲結束！' + gameBoard[2][0] + '獲勝！');
        showFeedback('遊戲結束！' + gameBoard[2][0] + '獲勝！');
        return true;
    }

    for (var row = 0; row < 3; row++) {
        for (var col = 0; col < 3; col++) {
            if (gameBoard[row][col] === '') {
                return false;
            }
        }
    }

    alert('遊戲結束！平局！');
    showFeedback('遊戲結束！平局！');
    return true;
}
function showFeedback(message) {
    var feedbackDiv = document.getElementById('feedback');
    feedbackDiv.innerText = message;
}
</script>
